<h2>New Order</h2>
<%= form_for (@order) do |f| %>
  <%= f.label :number %>:
  <%= f.text_field :number %>
  <%= f.label :customer %>:
  <%= f.select :customer, ['GBG Stad', 'VoO', 'Varberg PC', 'Varberg iPad'] %>
  <%= f.label :area %>:
  <%= f.text_field :area %>
  <%= f.label :units %>:
  <%= f.text_field :units %>
  <%= f.label :order_date %>:
  <%= f.text_field :order_date, placeholder: "2000-01-01" %>
  <%= f.label :note %>:
  <%= f.text_field :note %>
  <%= f.submit %>
  <% end %>
<h1>Orders</h1>
<table>
<tr>
  <th>Order number</th>
  <th>Customer</th>
  <th>Area</th>
  <th>Units</th>
  <th>Order date</th>
  <th>Days left</th>
  <th>Note</th>
  <th>State</th>
</tr>

<% @orders.each do |order| %>
<tr class="<%=order.state %>">
  <td><%= order.number %></td>
  <td><%= order.customer %></td>
  <td><%= order.area %></td>
  <td><%= order.units %></td>
  <td><%= order.order_date %></td>
  <td><%= days_left(order) %></td>
  <td><%= order.note %></td>
  <td><%= order.state %></td>
  <td><%= link_to 'Edit', edit_order_path(order) %></td>
</tr>
<% end %>
</table>
